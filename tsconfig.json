{
  "compilerOptions": {
    "module": "esnext",
    "noUnusedParameters": true,
    "target": "ESNext",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist",
    "baseUrl": "src/",
    "paths": {
      "components/*": ["components/*"],
      "common/*": ["common/*"],
      "hooks/*": ["hooks/*"],
      "lib/*": ["lib/*"],
      "theme/*": ["theme/*"]
    }
  },
  "include": ["src/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "website",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "types": ["typePatches"]
}
